{% if current %}
    {% if not config.onlyTemp %}
        <div class="normal medium">
            <span class="wi wi-strong-wind dimmed"></span>
            <span>
                {% if config.useBeaufort %}
                    {{current.beaufortWindSpeed() | round}}
                {% else %}
                    {{current.windSpeed | round}}
                {% endif %}
                
                {% if config.showWindDirection %}
                    <sup> 
                        {% if config.showWindDirectionAsArrow %}
                            <i class="fa fa-long-arrow-up" style="transform:rotate({{current.windDirection}}deg);"></i>    
                        {% else %}
                            {{current.cardinalWindDirection() | translate}}
                        {% endif %}
                        &nbsp;
                    </sup>
                {% endif %}
            </span>
            <span class="wi dimmed wi-{{current.nextSunAction()}}"></span>
            <span>
                {% if current.nextSunAction() == "sunset" %}
                    {{current.sunset | formatTime}}
                {% else %}
                    {{current.sunrise | formatTime}}
                {% endif %}
            </span>
        </div>
    {% endif %}
    <div class="large light">
        <span class="wi weathericon wi-{{current.weatherType}}"></span>
        <span class="bright">
            {{current.temperature | round(0 if config.roundTemp else 1)}}Â°{% if config.degreeLabel %}
                {% if config.units == "metric" %}C{% endif %}
                {% if config.units == "imperial" %}F{% endif %}
                {% if config.units == "default" %}K{% endif %}
			{% endif %}
        </span>
    </div>
{% endif %}

