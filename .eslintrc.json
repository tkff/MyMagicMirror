{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2017,
		"ecmaFeatures": {
			"globalReturn": true
		}
    },
	"rules": {
		"no-undef": "off",
		"no-unused-vars": "off"
	}
}
